#cloud-config
# user-data - qemu repo - fedora branch - Fedora 41.1
# https://gitlab.com/aws-lam/qemu/-/blob/fedora-packages/user-data?ref_type=heads
# https://gitlab.com/aws-lam/qemu/-/blob/fedora-packages/meta-data?ref_type=heads

password: fedora
chpasswd:
  expire: False

# Tell cloud-init to log the output to a log file
output: {all: '| tee -a /var/log/cloud-init-output.log'}

# Set hostname
hostname: fedora

# Set timezone
timezone: US/Alaska

ssh_authorized_keys:
 - ssh-rsa  Authentication from lam@laptop.lam1.us

# Upgrade apt database on first boot
package_update: true

# Upgrade the instance on first boot
package_upgrade: true

packages:
 - nfs-utils
 - httpd
 - httpd-manual
 - mod_ssl
 - whois
 - lynx
 - perl-CGI
 - perl-libwww-perl
 - xauth
 - php-fpm
 - php-mysqli
 - php-json
 - php
 - php-devel
 - php-gd
 - php-mbstring
 - php-intl
 - php-mysqlnd
 - php-xml
 - mariadb-server
 - mod_perl
 - gtk3
 - perl-DBD-MySQL
 - plocate
 - libxkbfile
 - xorg-x11-xbitmaps
 - git
 - bind
 - awscli2
 - leafpad

runcmd:
 - keyName="qemu-lam-fedora-packages"
 - echo
 - echo 'QEMU LAM Alaska Allow any to read /var/log/cloud-init-output.log'
 - chmod a+r /var/log/cloud-init-output.log
 - echo
 - echo 'QEMU LAM - set SElinux to permissive mode'
 - setenforce Permissive
 - echo
 - echo 'QEMU LAM Alaska Adding a swap partition'
 - echo '/dev/sdb1 swap swap defaults 0 0' >> /etc/fstab
 - swapon --all
 - free
 - echo 'QEMU LAM swap space in use'
 - swapon -s
 - echo
 - echo 'QEMU LAM Alaska Install texlive after swap is enabled'
 - dnf -y install texlive
 - echo
 - echo 'QEMU LAM Set git user name, email for system'
 - git config --system user.name "LAMurakami"
 - git config --system user.email GitHub@LAMurakami.com
 - git config --system core.editor vi
 - git config --system branch.autosetuprebase always
 - git config --system init.defaultBranch master
 - git config --system --add safe.directory /var/www/lam
 - echo
 - echo 'QEMU LAM Install etckeeper and perform intitial commit'
 - dnf -y install etckeeper
 - etckeeper init
 - etckeeper commit -m 'QEMU LAM fedora'
 - echo
 - echo 'QEMU LAM Set vi as default editor for system'
 - dnf remove -y nano-default-editor
 - echo
 - echo 'QEMU LAM Set hostname and localhost alias in /etc/hosts'
 - sed -i '1s/localhost/fedora.lam1.us fedora localhost/' /etc/hosts
 - echo '10.55.5.20 ak20.lam1.us ak20' >> /etc/hosts
 - echo
 - echo 'QEMU LAM Add localhost to known_hosts'
 - ssh-keyscan -t ed25519 localhost >> /etc/ssh/ssh_known_hosts
 - echo
 - echo 'QEMU LAM Create git user'
 - groupadd -g 206 staff
 - useradd -g staff -G staff -M -d /mnt/ak20-Bk/Bk2/aws/efs/git -u 4896 git
 - echo
 - echo 'QEMU LAM Alaska Report user-data for this instance (CloudInit directives)'
 - echo
 - cat /var/lib/cloud/instances/lam0/user-data.txt
 - echo
 - echo 'QEMU LAM Alaska Adding nfs4 mount to ak20:/mnt/ak20-ext4 and ak20:/mnt/ak20-Bk'
 - mkdir /mnt/ak20-ext4 /mnt/ak20-Bk
 - echo "ak20:/mnt/ak20-ext4 /mnt/ak20-ext4 nfs4 defaults,nofail,x-systemd.device-timeout=4 0 0" >> /etc/fstab
 - echo "ak20:/mnt/ak20-Bk   /mnt/ak20-Bk   nfs4 defaults,nofail,x-systemd.device-timeout=4 0 0" >> /etc/fstab
 - mount -a -t nfs4
 - df -Th --exclude-type=tmpfs --exclude-type=devtmpfs
 - echo
 - echo 'QEMU LAM Installing Amazon Linux 2 ec2-user bash resources for fedora user'
 - tar -xzf /mnt/ak20-Bk/Bk2/aws/efs/Amazon-Linux-2023/ec2-user.tgz --directory /home/fedora
 - echo
 - echo 'QEMU LAM Link to .aws resources for root'
 - ln -s /home/fedora/.aws /root/.aws
 - echo
 - echo 'QEMU LAM Copy ssh key root'
 - cp /home/fedora/.ssh/git_ak20_id_rsa /root/.ssh
 - echo 'Host localhost' >> /root/.ssh/config
 - echo 'IdentityFile /root/.ssh/git_ak20_id_rsa' >> /root/.ssh/config
 - chmod 600 /root/.ssh/config
 - echo
 - echo 'QEMU LAM Report kernel version'
 - uname -a
 - echo
 - echo 'QEMU LAM Report Release version'
 - head /etc/*release
 - echo
 - echo 'QEMU LAM Install man2html'
 - tar -xzf /mnt/ak20-Bk/Bk2/aws/efs/Amazon-Linux-2023/Amazom-Linux-2023-man2html.tgz --directory /usr/local
 - echo
 - echo 'QEMU LAM Install x11 apps'
 - tar -xzf /mnt/ak20-Bk/Bk2/aws/efs/Amazon-Linux-2023/xapps-AL2023-x86.tgz --directory /usr
 - echo
 - echo 'QEMU LAM Install geany'
 - tar -xzf /mnt/ak20-Bk/Bk2/aws/efs/Amazon-Linux-2023/geany.tgz --directory /usr/local
 - ldconfig /usr/local/lib
 - echo
 - echo 'QEMU LAM Install glances for fedora'
 - dnf -y install glances vim-enhanced
 - echo
 - echo 'QEMU LAM Alaska Installing aws.lam1.us web site'
 - git clone https://github.com/LAMurakami/aws /var/www/aws
 - sh -c "cd /var/www/aws;git remote set-url origin git@aws:aws"
 - sh -c "cd /var/www/aws;git remote rename origin aws"
 - sh -c "cd /var/www/aws;git remote add github git@github.com:LAMurakami/aws"
 - sh -c "cd /var/www/aws;git remote add gitlab git@gitlab.com:aws-lam/aws"
 - sh -c "cd /var/www/aws;git checkout -b $keyName"
 - sh -c "cd /var/www/aws;git tag -a -m 'QEMU LAM Initialization' b0-$keyName"
 - echo
 - echo 'QEMU LAM Cloud Guest motd'
 - ln -s /var/www/aws/etc/update-motd.d/51-cloudguest /etc/update-motd.d
 - echo
 - echo 'QEMU LAM Listen for ssh connections on alternate port 55520 and add ssh Banner'
 - cp /mnt/ak20-Bk/Bk2/aws/efs/Amazon-Linux-2023/sshd_config /etc/ssh/sshd_config
 - ln -s /var/www/aws/etc/ssh/Banner.txt /etc/ssh
 - systemctl restart sshd
 - echo
 - echo 'QEMU LAM configure aws-lam IPv4 access including IPv6 tunnels'
 - cp /var/www/aws/etc/ssh/ssh_config.d/aws-lam.conf /etc/ssh/ssh_config.d
 - cp /var/www/aws/etc/profile.d/ssh_tunnel.sh /etc/profile.d
 - echo
 - echo 'QEMU LAM ***** Secure site *****'
 - echo
 - echo 'QEMU LAM Install Let-s Encrypt certificates for TLS encryption (HTTPS)'
 - tar -xzf /mnt/ak20-Bk/Bk2/aws/efs/aws-lam1-ubuntu/letsencrypt.tgz --directory /etc
 - echo
 - echo 'QEMU LAM Install no-ssl web site'
 - git clone git@localhost:no-ssl.git /var/www/no-ssl
 - sh -c "cd /var/www/no-ssl;git remote set-url origin git@aws:no-ssl"
 - sh -c "cd /var/www/no-ssl;git remote rename origin aws"
 - sh -c "cd /var/www/no-ssl;git remote add github git@github.com:LAMurakami/no-ssl"
 - sh -c "cd /var/www/no-ssl;git remote add gitlab git@gitlab.com:aws-lam/no-ssl"
 - sh -c "cd /var/www/no-ssl;git checkout -b $keyName"
 - sh -c "cd /var/www/no-ssl;git tag -a -m 'QEMU LAM Initialization' b0-$keyName"
 - sed -i 's|aws.lam1.us|fedora.lam1.us|' /var/www/no-ssl/no-ssl_apache2.conf
 - echo
 - echo 'QEMU LAM Alaska Installing z.lam1.us web site'
 - git clone https://github.com/LAMurakami/z /var/www/z
 - sh -c "cd /var/www/z;git remote set-url origin git@github.com:LAMurakami/z"
 - sh -c "cd /var/www/z;git remote rename origin github"
 - sh -c "cd /var/www/z;git remote add aws git@aws:z"
 - sh -c "cd /var/www/z;git remote add gitlab git@gitlab.com:aws-lam/z"
 - sh -c "cd /var/www/z;git checkout -b $keyName"
 - sh -c "cd /var/www/z;git tag -a -m 'QEMU LAM Initialization' b0-$keyName"
 - echo
 - echo 'QEMU LAM Replace main apache2 configuration with no-ssl configuration'
 - echo
 - echo 'QEMU LAM Install lam web site'
 # Extract lam from archive that includes MediWiki
 - tar -xzf /mnt/ak20-Bk/Bk2/aws/efs/lam.tgz --directory /var/www
 # Use fedora branch to serve secure site at https://fedora.lam1.us
 - sh -c "cd /var/www/lam;git stash"
 - sh -c "cd /var/www/lam;git checkout fedora"
 - sh -c "cd /var/www/lam;git checkout -b $keyName"
 - sh -c "cd /var/www/lam;git tag -a -m 'QEMU LAM Initialization' b0-$keyName"
 - echo
 - echo 'QEMU LAM Update from default to LAM ubuntu web configuration'
 - sed -i "s|aws|fedora|" /var/www/no-ssl/apache2.conf
 - echo
 - echo 'QEMU LAM create Multicount directory'
 - mkdir /var/www/Multicount
 - chmod 775 /var/www/Multicount
 - echo
 - echo 'QEMU LAM Install LAM perl modules'
 - mkdir -p /usr/local/share/perl5/5.40
 - ln -s /var/www/no-ssl/site_perl-LAM /usr/local/share/perl5/5.40/LAM
 - echo
 - chmod a+rx /var/log/httpd
 - echo
 - echo 'QEMU LAM Update main apache2 configuration'
 - cp /var/www/aws/Amazon-Linux-2-httpd.conf /etc/httpd/conf/httpd.conf
 - sed -i 's|lama.ServerAdmin|fedora.ServerAdmin|' /etc/httpd/conf/httpd.conf
 - echo
 - echo 'QEMU LAM Update apache2 ssl configuration'
 - rm /etc/httpd/conf.d/ssl.conf
 - ln -s /var/www/lam/ssl.conf /etc/httpd/conf.d/ssl.conf
 - echo
 - echo 'QEMU LAM Configure /server-status /server-info ReadmeName'
 - ln -s /var/www/lam/lam_info.conf /etc/httpd/conf.d/info.conf
 - ln -s /var/www/lam/lam_status.conf /etc/httpd/conf.d/status.conf
 - sed -i 's/ReadmeName README.html/ReadmeName FOOTER.html/' /etc/httpd/conf.d/autoindex.conf
 - echo
 - echo 'QEMU LAM enable and start MariaDB'
 - systemctl enable mariadb
 - systemctl start mariadb
 - echo
 - echo 'QEMU LAM Install gitweb after apache has been configured'
 - dnf -y install gitweb
 - sed -i '1 s|Alias /git /var/www/git|Alias /gitweb /var/www/git|' /etc/httpd/conf.d/gitweb.conf
 - cp /var/www/aws/etc/gitweb.conf /etc/gitweb.conf
 - sed -i "s|/mnt/efs/git|/mnt/ak20-Bk/Bk2/aws/efs/git/|g" /etc/gitweb.conf
 - echo
 - echo 'QEMU LAM Creating {lam|Mediawiki} database and user'
 - mysql --table < /var/www/lam/lam-user.sql
 - echo 'QEMU LAM Restore latest lam database backup from AWS S3'
 - aws s3 cp s3://lamurakami/Bk-20-MySQL.lam.sql.gz - | gunzip -c | mysql --user=lam lam
 - echo 'QEMU LAM Restore latest LAM Alaska MediaWiki database backup from AWS S3'
 - aws s3 cp s3://lamurakami/Bk-20-MySQL.wikidb.sql.gz - | gunzip -c | mysql --user=lam wikidb
 - echo
 - echo 'QEMU LAM ***** Additional sites *****'
 - echo
 - echo 'QEMU LAM Installing sites.lam1.us web site'
 - git clone git@localhost:sites.git /var/www/sites
 - sh -c "cd /var/www/sites;git remote set-url origin git@aws:sites"
 - sh -c "cd /var/www/sites;git remote rename origin aws"
 - sh -c "cd /var/www/sites;git remote add github git@github.com:LAMurakami/sites"
 - sh -c "cd /var/www/sites;git remote add gitlab git@gitlab.com:aws-lam/sites"
 - sh -c "cd /var/www/sites;git checkout -b $keyName"
 - sh -c "cd /var/www/sites;git tag -a -m 'QEMU LAM Initialization' b0-$keyName"
 - echo
 - echo 'QEMU LAM Installing arsc.lam1.us web site'
 - git clone git@localhost:arsc /var/www/arsc
 - sh -c "cd /var/www/arsc;git remote set-url origin git@aws:arsc"
 - sh -c "cd /var/www/arsc;git remote rename origin aws"
 - sh -c "cd /var/www/arsc;git remote add github git@github.com:LAMurakami/arsc"
 - sh -c "cd /var/www/arsc;git remote add gitlab git@gitlab.com:aws-lam/arsc"
 - sh -c "cd /var/www/arsc;git checkout -b $keyName"
 - sh -c "cd /var/www/arsc;git tag -a -m 'QEMU LAM Initialization' b0-$keyName"
 - echo
 - echo 'QEMU LAM Alaska Installing gci.lam1.us web site'
 - git clone git@localhost:gci /var/www/gci
 - sh -c "cd /var/www/gci;git remote set-url origin git@aws:gci"
 - sh -c "cd /var/www/gci;git remote rename origin aws"
 - sh -c "cd /var/www/gci;git remote add github git@github.com:LAMurakami/gci"
 - sh -c "cd /var/www/gci;git remote add gitlab git@gitlab.com:aws-lam/gci"
 - sh -c "cd /var/www/gci;git checkout -b $keyName"
 - sh -c "cd /var/www/gci;git tag -a -m 'QEMU LAM Initialization' b0-$keyName"
 - echo
 - echo 'QEMU LAM ***** Final Initialization Steps *****'
 - echo
 - echo 'QEMU LAM add apache group to fedora'
 - sh -c "usermod -a -G apache fedora"
 - echo
 - echo 'QEMU LAM Create /phpinfo.php page'
 - [ sh, -c, 'echo "<?php phpinfo(); ?>" > /var/www/lam/html/phpinfo.php' ]
 - sh -c "cd /var/www/lam;git add html/phpinfo.php"
 - echo
 - echo 'QEMU LAM Activate aws and additional sites'
 - /var/www/aws/qemu-lam-apache2-sites-configuration-Fedora.bash
 - echo
 - echo 'QEMU LAM commit git changes from initialization'
 - /var/www/aws/AWS-LAM-git-commit.bash $keyName lam no-ssl
 - echo
 - echo 'QEMU LAM systemctl start httpd'
 - systemctl start httpd
 - echo
 - echo 'QEMU LAM systemctl enable httpd'
 - systemctl enable httpd
 - echo
 - echo 'QEMU LAM List Installed Packages information'
 - dnf repoquery --installed
 - echo
 - echo 'QEMU LAM ***** Update plocate database *****'
 - updatedb
 - echo
 - echo 'QEMU LAM Alaska Adding plocate path for ak20 nfs mounted volumes'
 - echo 'export LOCATE_PATH=/mnt/ak20-Bk/plocate.db:/mnt/ak20-ext4/plocate.db' > /etc/profile.d/plocate.sh
 - echo
 - echo 'QEMU LAM Create lam murakami staff credentials.'
 - /var/www/lam/Create-lam-murakami-staff.bash
 - echo
 - echo 'QEMU LAM Change ownership of /var/www'
 - chown -R lam:apache /var/www
 - chown -R apache:apache /var/www/Multicount
 - echo
 - echo 'QEMU LAM Enable x11 forwarding over ssh for sudo'
 - ln -s /var/www/no-ssl/xauthority.sh /etc/profile.d
 - echo
 - echo 'QEMU LAM Final Cloud-init etckeeper commit'
 - etckeeper commit -m 'QEMU LAM Final Cloud-init etckeeper commit'
 - echo
 - echo 'QEMU LAM cloud-init complete'
